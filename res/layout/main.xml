<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/main_outer_linearlayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/header_inner_linearlayout"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:gravity="center_horizontal">
        <TableRow
                  android:orientation="vertical"
                  android:layout_height="match_parent"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:id="@+id/favorites_row"
                  android:background="@color/header_active">
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:orientation="vertical">
            <se.mdh.dva217.incoffeewetrust.SquareImageView
                    android:id="@+id/imageButton_favorites"
                    android:src="@drawable/ic_action_important"
                    android:clickable="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center_horizontal"/>
            <View android:id="@+id/fav_separator"
                  android:background="#ff0000"
                  android:layout_width = "fill_parent"
                  android:layout_height="3dp"
                  android:visibility="visible"  />
            </LinearLayout>
            </TableRow>
        <TableRow android:layout_height="match_parent"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:id="@+id/search_row"
                  android:background="@color/header">
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:orientation="vertical">
            <se.mdh.dva217.incoffeewetrust.SquareImageView
                    android:id="@+id/imageButton_search"
                    android:background="@drawable/ic_action_search"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    />
                <View android:id="@+id/ser_separator"
                      android:background="#ff0000"
                      android:layout_width = "fill_parent"
                      android:layout_height="3dp"
                      android:visibility="invisible"  />
            </LinearLayout>
        </TableRow>
        <TableRow android:layout_height="match_parent"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:id="@+id/settings_row"
                  android:background="@color/header">
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent"
                          android:orientation="vertical">
            <se.mdh.dva217.incoffeewetrust.SquareImageView
                    android:id="@+id/imageButton_settings"
                    android:background="@drawable/ic_action_settings"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                     android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    />
                <View android:id="@+id/sett_separator"
                      android:background="#ff0000"
                      android:layout_width = "fill_parent"
                      android:layout_height="3dp"
                        android:visibility="invisible"/>
            </LinearLayout>
        </TableRow>
    </LinearLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            >

    </android.support.v4.view.ViewPager>


</LinearLayout>



