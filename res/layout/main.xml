<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/main_outer_linearlayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/header_inner_linearlayout"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="60sp"
                  android:gravity="center_horizontal"
                  android:background="@color/header"
            >

            <se.mdh.dva217.incoffeewetrust.SquareImageView
                    android:id="@+id/imageButton_settings"
                    android:background="@drawable/ic_action_important"
                    android:clickable="true"

                    android:paddingRight="0sp"
                    android:paddingLeft="0sp"


                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="left"


                    android:layout_weight="1"
                    />

            <se.mdh.dva217.incoffeewetrust.SquareImageView
                    android:id="@+id/imageButton_search"
                    android:background="@drawable/ic_action_search"
                    android:clickable="true"

                    android:paddingRight="0sp"
                    android:paddingLeft="0sp"

                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center_horizontal"

                    android:layout_weight="1"
                    />

            <se.mdh.dva217.incoffeewetrust.SquareImageView
                    android:id="@+id/imageButton_favorites"
                    android:background="@drawable/ic_action_settings"
                    android:clickable="true"

                    android:paddingRight="0sp"
                    android:paddingLeft="0sp"


                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="right"

                    android:layout_weight="1"

                    />

    </LinearLayout>

<android.support.v4.view.ViewPager
              android:id="@+id/pager"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

</android.support.v4.view.ViewPager>


</LinearLayout>



